<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Newsletter</h4>
  </div>
  <div class="row justify-content-center">
  <%= form_with scope: :newsletter, url: newsletters_new_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      
      <div class="form-group">
      <%= form.label :image %>
      <%= form.text_area :image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :article %>
        <%= form.text_area :article, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
